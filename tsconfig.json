{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "sourceMap": true,
    "jsx": "react",
    "allowJs": false,
    "noImplicitAny": false,
    "strictNullChecks": true
  },
  "lib": ["es2016", "dom"],
  "include": ["client/**/*", "server/**/*"],
  "exclude": ["node_modules", ".meteor"]
}
